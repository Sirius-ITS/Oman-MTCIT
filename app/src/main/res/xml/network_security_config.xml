<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- ✅ Trust system and user certificates for development -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- ✅ Backend API configuration -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">omanapi.isfpegypt.com</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>

    <!-- ✅ Bank Muscat Payment Gateway -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">spayuattrns.bmtest.om</domain>
        <domain includeSubdomains="true">bmtest.om</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>

    <!-- ✅ Local development server -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.40.10</domain>
    </domain-config>
</network-security-config>