<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">

    <aapt:attr name="android:drawable">
        <vector
            android:width="120dp"
            android:height="120dp"
            android:viewportWidth="120"
            android:viewportHeight="120">

            <!-- Background circle with brand colors -->
            <path
                android:name="background_circle"
                android:fillColor="@color/splash_icon_tint"
                android:pathData="M60,10C32.4,10 10,32.4 10,60s22.4,50 50,50s50,-22.4 50,-50S87.6,10 60,10z"/>

            <!-- Inner circle -->
            <path
                android:name="inner_circle"
                android:fillColor="@color/warm_yellow"
                android:pathData="M60,20C37.9,20 20,37.9 20,60s17.9,40 40,40s40,-17.9 40,-40S82.1,20 60,20z"/>

            <!-- MTCIT Letters -->
            <path
                android:name="letter_m"
                android:fillColor="@color/splash_icon_tint"
                android:pathData="M35,45h3v15h-3zM42,45h3v15h-3zM38,48h4v3h-4z"/>

            <path
                android:name="letter_t"
                android:fillColor="@color/splash_icon_tint"
                android:pathData="M50,45h8v3h-2.5v12h-3v-12h-2.5z"/>

            <path
                android:name="letter_c"
                android:fillColor="@color/splash_icon_tint"
                android:pathData="M65,48c-2,0 -3,1 -3,3v6c0,2 1,3 3,3c1,0 2,-0.5 2.5,-1.5l2,1.5c-1,1.5 -2.5,2 -4.5,2c-3,0 -5,-2 -5,-5v-6c0,-3 2,-5 5,-5c2,0 3.5,0.5 4.5,2l-2,1.5c-0.5,-1 -1.5,-1.5 -2.5,-1.5z"/>

            <path
                android:name="letter_i"
                android:fillColor="@color/splash_icon_tint"
                android:pathData="M75,45h3v15h-3z"/>

            <path
                android:name="letter_t2"
                android:fillColor="@color/splash_icon_tint"
                android:pathData="M82,45h8v3h-2.5v12h-3v-12h-2.5z"/>

            <!-- Ship/Marine elements -->
            <path
                android:name="ship_wave1"
                android:fillColor="#E3F2FD"
                android:pathData="M25,75C30,72 35,78 40,75C45,72 50,78 55,75v5C50,83 45,77 40,80C35,83 30,77 25,80z"/>

            <path
                android:name="ship_wave2"
                android:fillColor="#E3F2FD"
                android:pathData="M65,75C70,72 75,78 80,75C85,72 90,78 95,75v5C90,83 85,77 80,80C75,83 70,77 65,80z"/>
        </vector>
    </aapt:attr>

    <!-- Background circle entrance animation -->
    <target android:name="background_circle">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="800"
                    android:propertyName="scaleX"
                    android:valueFrom="0.0"
                    android:valueTo="1.0"
                    android:interpolator="@android:interpolator/overshoot" />
                <objectAnimator
                    android:duration="800"
                    android:propertyName="scaleY"
                    android:valueFrom="0.0"
                    android:valueTo="1.0"
                    android:interpolator="@android:interpolator/overshoot" />
            </set>
        </aapt:attr>
    </target>

    <!-- Inner circle animation -->
    <target android:name="inner_circle">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="600"
                    android:startOffset="300"
                    android:propertyName="scaleX"
                    android:valueFrom="0.0"
                    android:valueTo="1.0"
                    android:interpolator="@android:interpolator/bounce" />
                <objectAnimator
                    android:duration="600"
                    android:startOffset="300"
                    android:propertyName="scaleY"
                    android:valueFrom="0.0"
                    android:valueTo="1.0"
                    android:interpolator="@android:interpolator/bounce" />
            </set>
        </aapt:attr>
    </target>

    <!-- Letters animation - appearing one by one -->
    <target android:name="letter_m">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="300"
                android:startOffset="900"
                android:propertyName="fillAlpha"
                android:valueFrom="0.0"
                android:valueTo="1.0" />
        </aapt:attr>
    </target>

    <target android:name="letter_t">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="300"
                android:startOffset="1000"
                android:propertyName="fillAlpha"
                android:valueFrom="0.0"
                android:valueTo="1.0" />
        </aapt:attr>
    </target>

    <target android:name="letter_c">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="300"
                android:startOffset="1100"
                android:propertyName="fillAlpha"
                android:valueFrom="0.0"
                android:valueTo="1.0" />
        </aapt:attr>
    </target>

    <target android:name="letter_i">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="300"
                android:startOffset="1200"
                android:propertyName="fillAlpha"
                android:valueFrom="0.0"
                android:valueTo="1.0" />
        </aapt:attr>
    </target>

    <target android:name="letter_t2">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="300"
                android:startOffset="1300"
                android:propertyName="fillAlpha"
                android:valueFrom="0.0"
                android:valueTo="1.0" />
        </aapt:attr>
    </target>

    <!-- Wave animations -->
    <target android:name="ship_wave1">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="400"
                    android:startOffset="1600"
                    android:propertyName="fillAlpha"
                    android:valueFrom="0.0"
                    android:valueTo="1.0" />
                <objectAnimator
                    android:duration="2000"
                    android:startOffset="2000"
                    android:propertyName="translateX"
                    android:valueFrom="-5"
                    android:valueTo="5"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:interpolator="@android:interpolator/accelerate_decelerate" />
            </set>
        </aapt:attr>
    </target>

    <target android:name="ship_wave2">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="400"
                    android:startOffset="1700"
                    android:propertyName="fillAlpha"
                    android:valueFrom="0.0"
                    android:valueTo="1.0" />
                <objectAnimator
                    android:duration="2000"
                    android:startOffset="2100"
                    android:propertyName="translateX"
                    android:valueFrom="5"
                    android:valueTo="-5"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse"
                    android:interpolator="@android:interpolator/accelerate_decelerate" />
            </set>
        </aapt:attr>
    </target>

</animated-vector>

