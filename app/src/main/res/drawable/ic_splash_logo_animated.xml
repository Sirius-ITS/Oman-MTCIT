<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">

    <aapt:attr name="android:drawable">
        <vector
            android:width="120dp"
            android:height="120dp"
            android:viewportWidth="120"
            android:viewportHeight="120">

            <!-- Background circle with animation -->
            <path
                android:name="background_circle"
                android:fillColor="@color/warm_yellow"
                android:pathData="M60,10C32.4,10 10,32.4 10,60s22.4,50 50,50s50,-22.4 50,-50S87.6,10 60,10z"/>

            <!-- Ship body -->
            <path
                android:name="ship_body"
                android:fillColor="#FFFFFF"
                android:pathData="M30,50h60v8h-60z"/>

            <!-- Ship sail -->
            <path
                android:name="ship_sail"
                android:fillColor="#FFFFFF"
                android:pathData="M35,42h50l-5,8h-40z"/>

            <!-- Ship mast -->
            <path
                android:name="ship_mast"
                android:fillColor="#FFFFFF"
                android:pathData="M58,30h4v12h-4z"/>

            <!-- Ship flag -->
            <path
                android:name="ship_flag"
                android:fillColor="#FFFFFF"
                android:pathData="M45,35h30v3h-30z"/>

            <!-- Animated waves -->
            <path
                android:name="waves"
                android:fillColor="#E3F2FD"
                android:pathData="M20,70C25,67 30,73 35,70C40,67 45,73 50,70C55,67 60,73 65,70C70,67 75,73 80,70C85,67 90,73 95,70C100,67 105,73 110,70v20H20z"/>
        </vector>
    </aapt:attr>

    <!-- Background circle scale animation -->
    <target android:name="background_circle">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="800"
                android:propertyName="scaleX"
                android:valueFrom="0.5"
                android:valueTo="1.0"
                android:interpolator="@android:interpolator/overshoot" />
        </aapt:attr>
    </target>

    <target android:name="background_circle">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="800"
                android:propertyName="scaleY"
                android:valueFrom="0.5"
                android:valueTo="1.0"
                android:interpolator="@android:interpolator/overshoot" />
        </aapt:attr>
    </target>

    <!-- Ship fade in animation -->
    <target android:name="ship_body">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="600"
                android:startOffset="400"
                android:propertyName="fillAlpha"
                android:valueFrom="0.0"
                android:valueTo="1.0" />
        </aapt:attr>
    </target>

    <target android:name="ship_sail">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="600"
                android:startOffset="500"
                android:propertyName="fillAlpha"
                android:valueFrom="0.0"
                android:valueTo="1.0" />
        </aapt:attr>
    </target>

    <target android:name="ship_mast">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="600"
                android:startOffset="600"
                android:propertyName="fillAlpha"
                android:valueFrom="0.0"
                android:valueTo="1.0" />
        </aapt:attr>
    </target>

    <target android:name="ship_flag">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="600"
                android:startOffset="700"
                android:propertyName="fillAlpha"
                android:valueFrom="0.0"
                android:valueTo="1.0" />
        </aapt:attr>
    </target>

    <!-- Waves animation -->
    <target android:name="waves">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="1000"
                android:startOffset="800"
                android:propertyName="translateX"
                android:valueFrom="-10"
                android:valueTo="10"
                android:repeatCount="infinite"
                android:repeatMode="reverse"
                android:interpolator="@android:interpolator/accelerate_decelerate" />
        </aapt:attr>
    </target>

</animated-vector>

